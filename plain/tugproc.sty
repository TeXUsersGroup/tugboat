  \def\CurrentTag{shorttitle}%
  \@defaultoptions
  \@savingargumenttrue
  \@checkoptions}

\def\endshorttitle{%
  \global\toks@=\expandafter{\the\@argument}%
  \endgroup
  \edef\rhtitle{\ignorespaces\the\toks@\unskip}%
  }

\def\rhauthor{\@defaultauthorlist}
