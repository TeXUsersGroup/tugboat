% top matter
\def\endtitle{%
  \global\toks@=\expandafter{\the\@argument}%
  \endgroup
  \edef\thetitle{\ignorespaces\the\toks@\unskip}%
  \let\rhtitle\thetitle
  }
        % If your title is too long for the running head,
        % use this to construct a shorter version:
